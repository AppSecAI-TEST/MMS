<use-case-config name="mmd03_sst">
    <sensors>
        <sensor>
            <name>drifter-sst</name>
            <primary>true</primary>
        </sensor>
        <sensor>
            <name>aatsr-en</name>
            <primary>false</primary>
        </sensor>
    </sensors>
    <dimensions>
        <dimension name="drifter-sst">
            <nx>1</nx>
            <ny>1</ny>
        </dimension>
        <dimension name="aatsr-en">
            <nx>7</nx>
            <ny>7</ny>
        </dimension>
    </dimensions>

    <output-path>/group_workspaces/cems2/fiduceo/Data/mms/mmd/mmd03-sst/drifter-sst_amsre-aq</output-path>

    <conditions>
        <time-delta>
            <time-delta-seconds>14400</time-delta-seconds>
        </time-delta>

        <spherical-distance>
            <max-pixel-distance-km>1.41</max-pixel-distance-km>
        </spherical-distance>
    </conditions>

    <screenings>
    </screenings>

</use-case-config>